@using ASP_NetProject.Models
@model IQueryable<User>

@foreach (var p in Model ?? Enumerable.Empty<User>())
{
    <div>
        <h3>@p.Name</h3>
        @p.Password
        <h4>@p.UserID</h4>
    </div>
}

<div class="h-auto d-flex align-items-center justify-content-center">

    <div class="text-center">
        <label for="" class="text-center">Name</label>
        <input type="text">
    </div>
    <div>
        <label for="">Password</label>
        <input type="password">
    </div>

    <button class="home--button">
        test
    </button>

    <div class="username--text">
        
    </div>
</div>


<script >
    $(".username--text").click(function(){
        $(".username--text").toggle();
    });
</script>