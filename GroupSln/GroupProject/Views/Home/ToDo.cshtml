@using GroupProject.Models
@model UserViewModel


<div>
    <div class="col-6 d-flex flex-column justify-content-center align-content-center p-3">

        @foreach (var p in Model.todos ?? Enumerable.Empty<ToDo>())
        {
            <div class="d-row flex-column p-2">
                <h5>@p.TaskTitle</h5>
                <h5>@p.Description</h5>
                <h5>@p.CreatorOfTask</h5>
                <a asp-action="DeleteToDo" asp-route-id="@p.ToDoID"><i class="fa-solid fa-trash pointer-event"></i></a>
            </div>
        }
    </div>


    <div class="col-4">
        <form action="" method="post">

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <input asp-for="TaskTitle" class="form-control">
                <label asp-for="TaskTitle" class="form-label">Title</label>
            </div>

            <div class="form-group">
                <input asp-for="Description" class="form-control">
                <label asp-for="Description" class="form-label" for="">Description</label>
            </div>

            <div class="form-group">
                <input asp-for="CreatorOfTask" value="pleb" class="form-control" hidden>
                <label asp-for="CreatorOfTask" class="form-label" for="" hidden></label>
            </div>

            <select asp-for="UserId" name="Users" id="">
                @foreach (var p in Model.users ?? Enumerable.Empty<User>())
                {
                    <option value="@p.UserId">@p.Username</option>
                }
            </select>

            <input type="datetime-local" asp-for="EndTime">


            <button type="submit">Submit</button>

        </form>
    </div>
</div>